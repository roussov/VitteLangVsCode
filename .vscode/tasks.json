{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build client",
      "type": "shell",
      "command": "npx tsc -b client",
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "build server",
      "type": "shell",
      "command": "npx tsc -b server",
      "group": "build",
      "problemMatcher": "$tsc"
    },
    {
      "label": "build all",
      "dependsOn": ["build client", "build server"],
      "group": { "kind": "build", "isDefault": true }
    },
    {
      "label": "watch client",
      "type": "shell",
      "command": "npx tsc -b -w client",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": "build"
    },
    {
      "label": "watch server",
      "type": "shell",
      "command": "npx tsc -b -w server",
      "isBackground": true,
      "problemMatcher": "$tsc-watch",
      "group": "build"
    },
    {
      "label": "watch all",
      "dependsOn": ["watch client", "watch server"],
      "isBackground": true,
      "group": "build"
    },
    {
      "label": "clean",
      "type": "shell",
      "command": "npx tsc -b --clean client server",
      "group": "none"
    },
    {
      "label": "package vsix",
      "type": "shell",
      "command": "npx vsce package",
      "dependsOn": ["build all"],
      "group": "none"
    },
    {
      "label": "install vsix",
      "type": "shell",
      "command": "code --install-extension ./*.vsix",
      "dependsOn": ["package vsix"],
      "problemMatcher": [],
      "group": "none"
    }
  ]
}
