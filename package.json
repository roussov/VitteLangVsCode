{
  "name": "vitte",
  "displayName": "Vitte",
  "description": "Extension VSCode pour le langage Vitte",
  "version": "0.4.1",
  "publisher": "jclg",
  "engines": { "vscode": "^1.75.0" },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "dependencies": {
    "vscode-nls": "^5.0.0"
  },
  "activationEvents": [
    "onLanguage:vitte",
    "onCommand:vitte.showServerLog",
    "onCommand:vitte.restartServer",
    "onCommand:vitte.runAction",
    "onCommand:vitte.runActionWithArgs",
    "onCommand:vitte.debug.runFile",
    "onCommand:vitte.debug.attachServer"
  ],
  "contributes": {
    "languages": [
      {
        "id": "vitte",
        "aliases": ["Vitte", "vitte"],
        "extensions": [".vitte"],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      { "command": "vitte.showServerLog", "title": "Vitte: Show Server Log" },
      { "command": "vitte.restartServer", "title": "Vitte: Restart Server" },
      { "command": "vitte.runAction", "title": "Vitte: Run Action" },
      { "command": "vitte.runActionWithArgs", "title": "Vitte: Run Action (With Args)" },
      { "command": "vitte.debug.runFile", "title": "Vitte: Debug Run File" },
      { "command": "vitte.debug.attachServer", "title": "Vitte: Debug Attach Server" }
    ],
    "menus": {
      "commandPalette": [
        { "command": "vitte.showServerLog", "when": "editorLangId == vitte", "group": "navigation" },
        { "command": "vitte.restartServer", "when": "editorLangId == vitte", "group": "navigation" },
        { "command": "vitte.runAction", "when": "editorLangId == vitte", "group": "navigation" },
        { "command": "vitte.runActionWithArgs", "when": "editorLangId == vitte", "group": "navigation" },
        { "command": "vitte.debug.runFile", "when": "editorLangId == vitte", "group": "navigation" },
        { "command": "vitte.debug.attachServer", "when": "editorLangId == vitte", "group": "navigation" }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Configuration de Vitte",
      "properties": {
        "vitte.serverPath": {
          "type": "string",
          "default": "",
          "description": "Chemin vers l'exécutable du serveur Vitte (laisser vide pour utiliser le serveur intégré)."
        },
        "vitte.serverArgs": {
          "type": "array",
          "default": [],
          "description": "Arguments supplémentaires à passer au serveur Vitte.",
          "items": { "type": "string" }
        },
        "vitte.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Niveau de trace pour le serveur Vitte."
        },
        "vitte.logFilePath": {
          "type": ["string", "null"],
          "default": null,
          "description": "Chemin vers le fichier de log du serveur Vitte (laisser vide pour désactiver la journalisation)."
        },
        "vitte.enableDebugging": {
          "type": "boolean",
          "default": false,
          "description": "Activer le mode débogage pour le serveur Vitte (utile pendant le développement)."
        }
      }
    }
  }
}