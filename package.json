{
  "name": "vitte-lang",
  "displayName": "Vitte Language Support",
  "description": "Extension Visual Studio Code pour le langage Vitte : coloration syntaxique, snippets, configuration de langage et base pour LSP.",
  "version": "0.1.0",
  "publisher": "VitteStudio",
  "engines": {
    "vscode": "^1.75.0"
  },
  "extensionKind": [
    "workspace"
  ],
  "categories": [
    "Programming Languages",
    "Snippets",
    "Linters",
    "Formatters"
  ],
  "icon": "icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/vitte-lang/vscode-vitte"
  },
  "bugs": {
    "url": "https://github.com/vitte-lang/vscode-vitte/issues"
  },
  "homepage": "https://vitte-lang.github.io/vitte/",
  "license": "MIT",
  "keywords": [
    "vitte",
    "language",
    "syntax highlighting",
    "snippets",
    "vscode",
    "lsp",
    "compiler",
    "bytecode",
    "programming language"
  ],
  "main": "./client/out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "vitte",
        "aliases": [
          "Vitte",
          "vitte"
        ],
        "extensions": [
          ".vitte"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vitte",
        "scopeName": "source.vitte",
        "path": "./syntaxes/vitte.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "vitte",
        "path": "./snippets/vitte.json"
      }
    ],
    "configuration": {
      "title": "Vitte",
      "properties": {
        "vitte.enableLSP": {
          "type": "boolean",
          "default": false,
          "description": "Activer le serveur de langage Vitte (si disponible)"
        },
        "vitte.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Niveau de log pour le LSP"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./client && tsc -p ./server",
    "watch": "concurrently \"tsc -w -p ./client\" \"tsc -w -p ./server\"",
    "build": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^3.6.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0",
    "vsce": "^2.15.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
