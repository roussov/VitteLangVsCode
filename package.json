{
  "name": "vitte-lang",
  "displayName": "Vitte Language Support",
  "description": "Extension Visual Studio Code pour le langage Vitte : coloration syntaxique, snippets, configuration de langage, ic√¥nes et base pour LSP.",
  "version": "0.2.0",
  "publisher": "VitteStudio",
  "engines": { "vscode": "^1.75.0" },
  "extensionKind": ["workspace"],
  "categories": ["Programming Languages", "Snippets", "Linters", "Formatters"],
  "icon": "icon.png",

  "repository": { "type": "git", "url": "https://github.com/vitte-lang/vscode-vitte" },
  "bugs": { "url": "https://github.com/vitte-lang/vscode-vitte/issues" },
  "homepage": "https://vitte.dev",
  "license": "MIT",
  "keywords": [
    "vitte",
    "vit",
    "language",
    "syntax highlighting",
    "snippets",
    "vscode",
    "lsp",
    "compiler",
    "bytecode",
    "programming language",
    "icons"
  ],

  "main": "./client/out/extension.js",

  "contributes": {
    "languages": [
      {
        "id": "vitte",
        "aliases": ["Vitte", "vitte"],
        "extensions": [".vitte", ".vit"],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "vitte",
        "scopeName": "source.vitte",
        "path": "./syntaxes/vitte.tmLanguage.json"
      }
    ],
    "snippets": [
      { "language": "vitte", "path": "./snippets/vitte.json" }
    ],
    "configuration": {
      "title": "Vitte",
      "properties": {
        "vitte.enableLSP": {
          "type": "boolean",
          "default": false,
          "description": "Activer le serveur de langage Vitte (si disponible)"
        },
        "vitte.trace.server": {
          "type": "string",
          "enum": ["off", "messages", "verbose"],
          "default": "off",
          "description": "Niveau de log pour le LSP"
        }
      }
    },
    "iconThemes": [
      {
        "id": "vitte-icons",
        "label": "Vitte Icons",
        "path": "./icons/vitte-icon-theme.json"
      }
    ]
  },

  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./client && tsc -p ./server",
    "watch": "concurrently \"tsc -w -p ./client\" \"tsc -w -p ./server\"",
    "check:vsix": "npx @vscode/vsce ls",
    "build:vsix": "npm run compile && npm run check:vsix && npx @vscode/vsce package",
    "publish": "npm run compile && npx @vscode/vsce publish"
  },

  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.75.0",
    "@vscode/vsce": "^3.6.0",
    "concurrently": "^8.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },

  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
