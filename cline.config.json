{
  "version": 1,
  "files": {
    "include": [
      "${workspaceFolder}/**/*.{ts,tsx,js,jsx,json,md,html,css,scss,vue,svelte,rs,c,cpp,h,hpp,vit,vitl,vitte}"
    ],
    "exclude": [
      "**/node_modules/**",
      "**/dist/**",
      "**/out/**",
      "**/.git/**",
      "**/.vscode-test/**",
      "**/.cache/**",
      "**/coverage/**",
      "**/logs/**",
      "**/tmp/**",
      "**/temp/**"
    ],
    "max_file_size_mb": 3,
    "max_files": 300
  },
  "runtime": {
    "model": "qwen-coder-fast-ultra:latest",
    "max_input_tokens": 12288,
    "max_output_tokens": 4096,
    "request_timeout_ms": 25000,
    "verbosity": "minimal"
  }
}