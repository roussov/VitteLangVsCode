{
  "name": "vitte-vscode-server",
  "private": true,
  "version": "0.1.0",
  "description": "LSP backend server for Vitte/Vitl VS Code extension",
  "author": "VitteStudio",
  "license": "MIT",
  "type": "commonjs",
  "main": "out/server.js",
  "files": [
    "out/**/*",
    "src/**/*",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "build": "tsc -b",
    "watch": "tsc -b -w",
    "clean": "tsc -b --clean",
    "start": "node --enable-source-maps out/server.js",
    "prepare": "npm run build",
    "lint": "tsc --noEmit",
    "test": "echo \"No tests defined\" && exit 0"
  },
  "dependencies": {
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.8"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "@types/node": "24.3.1",
    "eslint": "9.35.0"
  }
}
